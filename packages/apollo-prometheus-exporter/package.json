{
  "name": "@mazeapp/apollo-prometheus-exporter",
  "version": "1.0.0",
  "description": "Plugin for Apollo Server to export metrics in Prometheus format",
  "keywords": [
    "apollo",
    "apollo server",
    "prometheus",
    "metrics",
    "tracing"
  ],
  "author": "Maze",
  "scripts": {
    "clean": "rm -rf dist",
    "compile": "tsc -p lib/tsconfig.json",
    "build": "pnpm clean && pnpm compile && pnpm copy-assets",
    "copy-assets": "copyfiles -f lib/package.json README.md dist",
    "type-check": "tsc --noEmit"
  },
  "license": "MIT",
  "main": "index.js",
  "homepage": "https://github.com/mazedesignhq/apollo-prometheus-exporter#readme",
  "repository": "github:mazedesignhq/apollo-prometheus-exporter",
  "peerDependencies": {
    "prom-client": "^12.0.0 || ^13.0.0 || ^14.0.0",
    "@apollo/server": "^4.0.0",
    "@types/express": "^4.17.13"
  },
  "devDependencies": {
    "graphql": "^16.6.0"
  }
}
